#!/bin/bash

# Maverick
VERSION=`cat debian/changelog | head -n 1 | awk '{printf$2}' | awk 'sub("\\\(","")' | awk 'sub("lucid","maverick")' | awk 'sub("\\\)","\n")' | head -n 1`
dch --force-distribution -D maverick -v $VERSION "Maverick build"
debuild -S -sa

# Natty
VERSION=`cat debian/changelog | head -n 1 | awk '{printf$2}' | awk 'sub("\\\(","")' | awk 'sub("maverick","natty")' | awk 'sub("\\\)","\n")' | head -n 1`
dch --force-distribution -D natty -v $VERSION "Natty build"
debuild -S -sa

# Oneiric
VERSION=`cat debian/changelog | head -n 1 | awk '{printf$2}' | awk 'sub("\\\(","")' | awk 'sub("natty","oneiric")' | awk 'sub("\\\)","\n")' | head -n 1`
dch --force-distribution -D oneiric -v $VERSION "Oneiric build"
debuild -S -sa

# Precise
VERSION=`cat debian/changelog | head -n 1 | awk '{printf$2}' | awk 'sub("\\\(","")' | awk 'sub("oneiric","precise")' | awk 'sub("\\\)","\n")' | head -n 1`
dch --force-distribution -D precise -v $VERSION "Precise build"
debuild -S -sa
