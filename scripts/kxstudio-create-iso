#!/bin/bash

# Check dependencies
if (which 7z > /dev/null); then true; else
  echo "7z not found, please install it"
  exit
fi

if (which debootstrap > /dev/null); then true; else
  echo "debootstrap not found, please install it"
  exit
fi

if (which cpio > /dev/null); then true; else
  echo "cpio not found, please install it"
  exit
fi

if (which lzma > /dev/null); then true; else
  echo "lzma not found, please install it"
  exit
fi

if (which mkisofs > /dev/null); then true; else
  echo "mkisofs not found, please install it"
  exit
fi

if (which mksquashfs > /dev/null); then true; else
  echo "mksquashfs not found, please install it"
  exit
fi

case $1 in

    squash)
sudo debootstrap --arch=$3 $2 ~/livecd/custom
    ;;

    custom)
sudo mount --bind /dev ~/livecd/custom/dev
sudo cp /etc/resolv.conf /etc/hosts ~/livecd/custom/etc/
echo "run this now:

mount -t proc none /proc/
mount -t sysfs none /sys/
mount -t devpts none /dev/pts
export HOME=/root
export LANG=C
"
echo "
SAVE THIS INFORMATION BELLOW, AND RUN IT ONE AT A TIME:

# Update Sources (copy sources.list if needed)
apt-get update
apt-get install python-software-properties wget
add-apt-repository -y ppa:kxstudio-team/kxstudio
add-apt-repository -y ppa:blue-shell/firefox-kde
apt-get update
apt-get install kxstudio-repos
apt-get install kxstudio-repos-kde49

# Check /etc/apt/sources.list

# Update System
apt-get update
apt-get dist-upgrade

# Base Install
apt-get install ubuntu-standard laptop-detect os-prober
apt-get install kxstudio-kernel-lowlatency

# Clean previous
apt-get clean

# Install meta-packages (Download)
apt-get install -d kxstudio-desktop-kde4 kxstudio-meta-all kxstudio-meta-restricted-extras kxstudio-meta-non-free

# Install meta-packages (Install)
apt-get install kxstudio-desktop-kde4 kxstudio-meta-all kxstudio-meta-restricted-extras kxstudio-meta-non-free

# Remove pulseaudio
apt-get remove pulseaudio

# reinstall/configure renoise
dpkg-reconfigure renoise

# Clean previous
apt-get clean

# Good Extras
# apt-get install pulseaudio-module-jack pavucontrol
apt-get install hydrogen-drumkits kxstudio-docs
apt-get install firefox firefox-kde-support

# Cleanup
apt-get autoremove
apt-get clean

# Root theme
sudo mkdir -p /root/.config/
sudo mkdir -p /root/.config/qtcurve/
sudo mkdir -p /root/.kde/
sudo mkdir -p /root/.kde/share/
sudo mkdir -p /root/.kde/share/config/
sudo cp ~/.gtkrc-2.0-kxstudio /root/.gtkrc-2.0
sudo cp ~/.config/qtcurve/* /root/.config/qtcurve
sudo cp ~/.kde/share/config/gtkrc* /root/.kde/share/config/
sudo cp ~/.kde/share/config/kcmdisplayrc /root/.kde/share/config/
sudo cp ~/.kde/share/config/kdeglobals /root/.kde/share/config/

## ---- PAUSE HERE ----- ##
# Before installing ubiquity in the live session, you'll need to run this outside:
$ sudo mkdir -p ~/livecd/cd/casper/
$ sudo touch ~/livecd/cd/casper/filesystem.manifest-desktop
$ sudo chmod 777 ~/livecd/cd/casper/filesystem.manifest-desktop
$ sudo chroot ~/livecd/custom dpkg-query -W --showformat='\${Package} \${Version}\n' > ~/livecd/cd/casper/filesystem.manifest-desktop"

sudo chroot ~/livecd/custom dpkg-query -W --showformat='${Package} ${Version}\n' > ~/livecd/cd/casper/filesystem.manifest-desktop

echo "## ----- END PAUSE ----- ##

# Now install the liveDVD specific packages
apt-get install ubiquity-frontend-kde casper lupin-casper discover jfsutils ntfsprogs xfsprogs

apt-get update; apt-get dist-upgrade

apt-get purge archdetect-deb apt-clone btrfs-tools casper cryptsetup discover discover-data dmraid dpkg-repack \
ecryptfs-utils jfsutils keyutils kpartx kpartx-boot libdebconfclient0 libdebian-installer4 libdiscover2 \
libdmraid1.0.0.rc16 libecryptfs0 libiw30 libnss3-1d libreadline5 localechooser-data lupin-casper ntfsprogs \
python-pyicu rdate realpath reiserfsprogs ubiquity ubiquity-casper ubiquity-frontend-kde ubiquity-ubuntu-artwork user-setup xfsprogs
"
sudo chroot ~/livecd/custom
echo "done"
    ;;

    custom_end)
echo "run this now:

#rm -f /sbin/initctl
#dpkg-divert --rename --remove /sbin/initctl

rm -f /var/kxstudio/*

apt-get clean
rm -rf /tmp/*
rm -f /etc/hosts /etc/resolv.conf
umount /dev/pts
umount /proc/ # to force: 'umount -lf /proc'
umount /sys/
exit
"
  ;;

    mksquash)
sudo mkdir -p ~/livecd/cd/casper/
sudo touch ~/livecd/cd/casper/filesystem.manifest
sudo chmod 777 ~/livecd/cd/casper/filesystem.manifest
sudo chroot ~/livecd/custom dpkg-query -W --showformat='${Package} ${Version}\n' > ~/livecd/cd/casper/filesystem.manifest
sudo rm -f ~/livecd/cd/casper/filesystem.squashfs
sudo mksquashfs ~/livecd/custom ~/livecd/cd/casper/filesystem.squashfs -noappend
cd ~/livecd/
sudo su root -c "printf $(sudo du -sx --block-size=1 custom | cut -f1) > cd/casper/filesystem.size"
echo "done"
exit
    ;;

    mkboot)
cd ~/livecd/
sudo rm -f cd/casper/vmlinuz cd/casper/initrd.lz cd/casper/initrd_tmp.gz
sudo cp custom/boot/vmlinuz-* cd/casper/vmlinuz
sudo cp custom/boot/initrd.img-* cd/casper/initrd_tmp.gz

cd ~/livecd/cd/casper
sudo rm -rf ext
sudo mkdir ext
cd ext
sudo su root -c '7z x -so ../initrd_tmp.gz | cpio -id'
sudo su root -c 'find . | cpio --dereference -o -H newc | lzma -7 > ../initrd.lz'
cd ..
sudo rm -rf ext initrd_tmp.gz

echo "done"
    ;;

    mkart)
if [ ! -f ~/livecd/iso-stuff.7z ]; then
  echo "Please copy iso-stuff.7z to ~/livecd before continuing"
  exit
fi

ISO_ARCH="$2"
ISO_NAME="$3"

if [ $ISO_ARCH"0" == "0" ]; then
echo "usage: $0 mkart <arch> <distro>"
exit
fi

if [ $ISO_NAME"0" == "0" ]; then
echo "usage: $0 mkart $ISO_ARCH <distro>"
exit
fi

cd ~/livecd/cd
sudo 7z x -y ../iso-stuff.7z

sudo sed "s/X-ISO_ARCH-X/$ISO_ARCH/" -i ~/livecd/cd/README.diskdefines
sudo sed "s/X-ISO_NAME-X/$ISO_NAME/" -i ~/livecd/cd/README.diskdefines
sudo sed "s/X-ISO_NAME-X/$ISO_NAME/" -i ~/livecd/cd/isolinux/text.cfg
sudo mkdir -p ~/livecd/cd/.disk/
sudo su root -c 'echo "KXStudio 12.04.1 (Live 32bit)" > ./.disk/info'
sudo su root -c 'echo "http://kxstudio.sourceforge.net/" > ./.disk/release_notes_url'
echo "Please edit these files manually:
~/livecd/cd/.disk/info
~/livecd/cd/.disk/release_notes_url
~/livecd/cd/README.diskdefines
~/livecd/cd/preseed/live.seed
"
    ;;

    md5sum)
cd ~/livecd/cd
sudo rm -f ./md5sum.txt
sudo su root -c "find . -type f -print0 | xargs -0 md5sum > md5sum.txt"
echo "done"
    ;;

    iso)
ARG2="$2"
if [ $ARG2"0" == "0" ]; then
echo "usage: $0 iso <label>"
exit
fi

cd ~/livecd/cd
isolinux=`find . -name isolinux.bin | head -n 1 | awk 'sub("./","")'`
bootcat=`find . -name boot.cat | head -n 1 | awk 'sub("./","")'`
sudo mkisofs -r -V "$ARG2" -b $isolinux -c $bootcat -cache-inodes -J -l -no-emul-boot -boot-load-size 4 -boot-info-table -input-charset utf-8 -o ~/$ARG2.iso .
echo "done"
    ;;

    clean)
sudo umount /tmp/livecd/
sudo umount ~/livecd/squashfs/
sudo rm -rf /tmp/livecd/
sudo rm -rf ~/livecd/
echo "done"
    ;;

    *)
echo "usage: $0 <cmd>

 1 - squash <version> <arch> [version=precise] [arch=i386/amd64]
 2 - custom
 3 - custom_end
 4 - mksquash
 5 - mkboot
 6 - mkart <arch> <distro-name> [arch=i386/amd64] [distro=KXStudio (no spaces!)]
 7 - md5sum
 8 - iso <label> [label=KXStudio_12.04_32bit (no spaces!)]

 x - clean
"
    ;;
esac
